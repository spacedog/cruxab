# Description: GNOME Printing Library
# URL: http://www.gnome.org
# Maintainer: abaranov dot anton at gmail dot com
	# Depends on: libgnomeprint libgnomecanvas gtk gnome-icon-theme

name=libgnomeprintui
version=2.18.6
release=1
source=(ftp://ftp.gnome.org/pub/GNOME/sources/$name/2.18/$name-$version.tar.bz2)

build() {
	cd $name-$version

	sed -i -e 's/USE_NLS=yes/USE_NLS=no/' \
			 -e 's/ENABLE_NLS 1/ENABLE_NLS 0/' configure

	./configure --prefix=/usr \
					--disable-gtk-doc

	make
	make DESTDIR=$PKG install

	rm -rf $PKG/usr/share/gtk-doc
}
