# Description: A system that facilitates service discovery on local networks
# URL: http://avahi.org/
# Maintainer: anton baranov, abaranov dot anton at gmail dot com
# Depends on: libdaemon, dbus, dbus-python, pygtk, libglade, p5-xml-parser

name=avahi
version=0.6.28
release=1
source=(http://avahi.org/download/$name-$version.tar.gz rc.$name)

build() {
	cd $name-$version
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--mandir=/usr/man \
		--disable-qt3 \
		--disable-qt4 \
		--disable-gtk3 \
		--disable-doxygen-doc \
		--disable-doxygen-dot \
		--with-avahi-user=avahi \
		--with-avahi-group=avahi \
		--with-distro=none \
		--disable-mono \
		--disable-monodoc \
		--enable-compat-howl \
		--enable-compat-libdns_sd
	make
	make DESTDIR=$PKG install
	install -D -o root -g root -m 0755 $SRC/rc.$name \
		$PKG/etc/rc.d/$name
	rm -rf $PKG/usr/share/locale
}

