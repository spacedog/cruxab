# Description: Portable Tools Library
# URL: http://www.gnome.org
# Maintainer: anton baranov, abaranov dot anton at gmail dot com	
# Depends on: openldap cyrus-sasl alsa-lib expat speex 

name=ptlib
version=2.8.3
release=1
source=(ftp://ftp.gnome.org/pub/GNOME/sources/$name/2.8/$name-$version.tar.bz2)

build(){
	cd $name-$version

	./configure --prefix=/usr \
					--mandir=/usr/man \
					--enable-sasla \
					--enable-openssl \
					--enable-openldap \
					--enable-expat \
					--enable-alsa \
					--disable-nls 

	make 
	make DESTDIR=$PKG install

}
