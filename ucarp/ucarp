#
# /etc/rc.d/ucarp: start/stop ucarp daemon
#
DAEMON=`which ucarp`

case $1 in
	start)
		echo "Starting ucarp..."
		#$DAEMON -B -z -b 2 -k 200 -r 4 --interface=eth0 --srcip=10.10.10.2 --vhid=1 --pass=password --addr=10.10.10.10 --upscript=/etc/vip-up.sh --downscript=/etc/vip-down.sh
		;;
	stop)
		echo "Shutting down ucarp..."
		#killall -q $DAEMON
		;;
	restart)
		$0 stop
		sleep 2
		$0 start
		;;
	*)
		echo "Usage: $0 [start|stop|restart]"
		;;
esac
